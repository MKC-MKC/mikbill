{
    "name": "haikiri/mikbill",
    "description": "MikBiLL PHP SDK for working with clients.",
    "keywords": [
        "php",
        "sdk",
        "mikbill",
        "api",
        "users",
        "billing",
        "cabinet"
    ],
    "homepage": "https://github.com/MKC-MKC/mikbill",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Haikiri\\MikBiLL\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Haikiri\\MikBiLL\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "guzzlehttp/guzzle": "^7.9"
    },
    "authors": [
        {
            "name": "Haikiri",
            "email": "haikiri@ya.ru",
            "homepage": "https://haikiri.t.me"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^12.5"
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always tests",
        "test:debug": "vendor/bin/phpunit --colors=always --debug tests",
        "test:dox": "vendor/bin/phpunit --colors=always --display-deprecations --testdox tests"
    }
}
